<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping
  xmlns="urn:nhibernate-mapping-2.2"
  assembly="CRM.Domain"
  namespace="CRM.Domain.Domain"
  default-lazy="false">
  <class name="Product" abstract="false"
         table="Product">
    <id name="PrimaryKey">
      <generator class="guid.comb" />
    </id>
    <property name="AmountInStock" />
    <property name="Code" />
    <property name="Description" />
    <property name="Name" />
    <property name="Price" />

  </class>
         
</hibernate-mapping>